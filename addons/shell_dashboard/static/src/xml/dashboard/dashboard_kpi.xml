<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="shell_dashboard.KPI" t-ref="root" owl="1">
        <div class="dashboard-kpi">
            <!-- KPI Header -->
            <div class="kpi-header d-flex justify-content-between align-items-center p-2 border-bottom">
                <h6 t-esc="props.block.name" class="kpi-title mb-0 fw-bold" />
                <div class="kpi-actions">
                    <button t-on-click="configureBlock" class="btn btn-sm btn-outline-secondary">
                        <i class="fa fa-cog" />
                    </button>
                    <button t-on-click="deleteBlock" class="btn btn-sm btn-outline-danger ms-1">
                        <i class="fa fa-trash" />
                    </button>
                </div>
            </div>
            <!-- KPI Body -->
            <div t-att-style="'background-color: ' + props.block.config.colors.background" class="kpi-body p-3">
                <div class="kpi-card d-flex justify-content-between align-items-center">
                    <!-- LEFT SIDE -->
                    <div>
                        <div class="d-flex">
                            <div class="kpi-main-value kpi-value">
                                <t t-esc="props.block.data.formatted_value" />
                            </div>
                            <span>
                                <div t-att-style="'color: ' + props.block.config.colors.text" class="kpi-label small kpi-unit">
                                    <t t-esc="props.block.name" />
                                </div>
                                <span t-att-class="'badge ' + getTrendClass(props.block.data.trend_direction)+' text-light'">
                                    <i t-att-class="getTrendIcon(props.block.data.trend_direction)" />
                                    <t t-esc="Math.abs(props.block.data.trend).toFixed(1) + '%'" />
                                </span>
                            </span>
                        </div>
                        <!-- <div class="d-flex justify-content-between align-items-center">
                            <t t-esc="props.block.config.trend_period" />
                        </div> -->
                    </div>
                    <!-- RIGHT SIDE -->
                    <div t-att-data-progress="props.block.data.achievement" t-ref="ring" class="progress-ring">
                        <svg viewBox="0 0 120 120" preserveAspectRatio="xMidYMid meet">
                            <circle class="progress-bg" cx="60" cy="60" r="50" />
                            <circle class="progress-bar" cx="60" cy="60" r="50" />
                        </svg>
                        <div class="progress-content">
                            <i t-att-class="props.block.config.icon + ' kpi-icon'" t-att-style="'color:' + props.block.config.colors.icon" />
                            <div class="kpi-percent">
                                <t t-esc="Math.min(props.block.data.achievement,100).toFixed(0)" />
                                %
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Double-click overlay -->
            <div t-on-dblclick.stop="openRecords" class="kpi-overlay" />
        </div>
    </t>
</templates>