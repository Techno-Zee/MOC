<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_dashboard_menu_list" model="ir.ui.view">
        <field name="name">dashboard.menu.list</field>
        <field name="model">dashboard.menu</field>
        <field name="arch" type="xml">
            <list string="Dashboard Menus" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="menu_id"/>
            </list>
        </field>
    </record>
    <record id="view_dashboard_menu_form" model="ir.ui.view">
        <field name="name">dashboard.menu.form</field>
        <field name="model">dashboard.menu</field>
        <field name="arch" type="xml">
            <form string="Dashboard Menu">
                <sheet>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Dashboard Menu Name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Menu Configuration">
                            <field name="menu_id"/>
                            <field name="sequence"/>
                        </group>

                        <group string="Access Control">
                            <field name="group_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <separator string="Generated Records"/>

                    <group>
                        <group>
                            <field name="menu_ref" readonly="1"/>
                        </group>
                        <group>
                            <field name="client_action_id" readonly="1"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_dashboard_menu" model="ir.actions.act_window">
        <field name="name">Dashboard Menu</field>
        <field name="res_model">dashboard.menu</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create dashboard menus that generate client actions automatically.
            </p>
        </field>
    </record>
</odoo>
