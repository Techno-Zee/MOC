<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action untuk membuka Settings Shell Dashboard -->
    <record id="action_shell_dashboard_settings" model="ir.actions.act_window">
        <field name="name">Shell Dashboard Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'shell_dashboard'}</field>
    </record>

    <!-- Root Menu: Shell Dashboard -->
    <menuitem
        id="menu_shell_dashboard_root"
        name="Shell Dashboard"
        sequence="60"
        web_icon="shell_dashboard,static/description/icon.png"
    />

    <!-- Submenu: Dashboards -->
    <menuitem
        id="menu_shell_dashboard_dashboards"
        name="Dashboards"
        parent="menu_shell_dashboard_root"
        action="dashboard_view_action"
        sequence="10"
    />

    <!-- Submenu: Dashboard Blocks -->
    <menuitem
        id="menu_shell_dashboard_blocks"
        name="Dashboard Blocks"
        parent="menu_shell_dashboard_root"
        action="dashboard_block_action"
        sequence="20"
    />

    <!-- Submenu: Configuration -->
    <menuitem
        id="menu_shell_dashboard_config"
        name="Configuration"
        parent="menu_shell_dashboard_root"
        sequence="90"
    />

    <!-- Submenu Configuration: Dashboard Menus (asumsi sudah ada action-nya) -->
    <menuitem
        id="menu_shell_dashboard_menus"
        name="Dashboard Menus"
        parent="menu_shell_dashboard_config"
        action="action_dashboard_menu"
        sequence="10"
    />

    <!-- Submenu Configuration: Settings (baru) -->
    <menuitem
        id="menu_shell_dashboard_settings"
        name="Settings"
        parent="menu_shell_dashboard_config"
        action="action_shell_dashboard_settings"
        sequence="20"
        groups="base.group_system"
    />

</odoo>